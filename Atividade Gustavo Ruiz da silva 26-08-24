


import java.util.Random;
import java.util.Scanner;
    
public class Main {

    private static final int MAX_TENTATIVAS = 10;  // NÃºmero mÃ¡ximo de tentativas

    public static void main(String[] args) {
        System.out.println("ğŸ…½ğŸ†„ğŸ…¼ğŸ…´ğŸ†ğŸ…¾ ğŸ†‚ğŸ…´ğŸ…²ğŸ†ğŸ…´ğŸ†ƒğŸ…¾");
        Scanner scanner = new Scanner(System.in);
        Random randomizacao = new Random();

        System.out.print("Digite seu nome completo: ");
        String nome = scanner.nextLine().trim();
        System.out.println("\nOlÃ¡, " + nome + "! Vamos jogar.");

        boolean continuar = true;

        while (continuar) {
            int numeroSorte = randomizacao.nextInt(100) + 1;  // NÃºmero aleatÃ³rio entre 1 e 100
            int tentativas = 0;
            boolean acertou = false;

            while (tentativas < MAX_TENTATIVAS && !acertou) {
                System.out.print("Qual Ã© o seu palpite? (entre 1 e 100): ");
                int tentativa = scanner.nextInt();
                tentativas++;

                if (tentativa < numeroSorte) {
                    System.out.println("O nÃºmero da sorte Ã© maior!");
                } else if (tentativa > numeroSorte) {
                    System.out.println("O nÃºmero da sorte Ã© menor!");
                } else {
                    acertou = true;
                    System.out.println("ParabÃ©ns, " + nome + "! VocÃª acertou o nÃºmero da sorte em " + tentativas + " tentativas.");
                }
            }

            if (!acertou) {
                System.out.println("VocÃª nÃ£o conseguiu adivinhar o nÃºmero da sorte. Era " + numeroSorte + ".");
            }

            // Pergunta se o usuÃ¡rio quer jogar novamente
            System.out.print("Quer jogar novamente? (s/n): ");
            char resposta = scanner.next().trim().toLowerCase().charAt(0);
            continuar = (resposta == 's');
        }

        System.out.println("Obrigado por jogar, " + nome + "!");
        scanner.close();
    }
}
